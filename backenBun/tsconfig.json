{
  "compilerOptions": {
    "target": "es2022",
    "module": "esnext",
    "moduleResolution": "bundler",
    "lib": ["es2022"],
    "allowJs": true,
    "outDir": "build",
    "rootDir": ".",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@shared/*": ["./shared/*"],
      "@/*": ["./*"]
    },
    "types": ["bun-types"]
  },
  "include": [
    "src/**/*",
    "shared/**/*",
    "gateway/**/*",
    "services/**/*"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist"
  ]
}
