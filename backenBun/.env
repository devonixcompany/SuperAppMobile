# Database Configuration
DATABASE_URL="postgresql://postgres:password@postgres:5432/superapp?schema=public"
DB_MAX_CONNECTIONS=10
DB_SSL=false

# Security
JWT_SECRET="your-secret-key"

# Service Configuration
PORT=3000
NODE_ENV=development

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_MAX_RETRIES=3

# Monitoring Configuration
MONITORING_ENABLED=true
METRICS_INTERVAL=60000
HEALTH_CHECK_INTERVAL=30000

# Service Discovery Configuration
SERVICE_DISCOVERY_ENABLED=false
SERVICE_REGISTRY_URL=
HEARTBEAT_INTERVAL=30000

# Service URLs (for manual service discovery)
STATION_SERVICE_URL=http://station-service:3001
BILLING_SERVICE_URL=http://billing-service:3003
DRIVER_SERVICE_URL=http://driver-service:3002
MONITORING_SERVICE_URL=http://monitoring-service:3004
AUTH_SERVICE_URL=http://auth-service:3002
USER_SERVICE_URL=http://user-service:3001
OCPP_GATEWAY_URL=http://ocpp-gateway:4000
